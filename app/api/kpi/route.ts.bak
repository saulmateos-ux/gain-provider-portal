import { NextRequest, NextResponse } from 'next/server';
import { query } from '@/lib/db';
import { z } from 'zod';

/**
 * KPI Summary Endpoint
 *
 * CRITICAL RULE #1: NO frontend calculations
 * This endpoint ONLY fetches pre-calculated data from materialized view
 *
 * Returns dashboard KPIs:
 * - Total invoiced, collected, written off, open balance
 * - Collection rate, DSO
 * - Case and invoice counts
 */

const QuerySchema = z.object({
  providerId: z.string().optional(),
});

export const dynamic = 'force-dynamic'; // Required for auth()
export const revalidate = 60; // Cache for 60 seconds

export async function GET(request: NextRequest) {
  try {
    // 1. Authentication
    const { userId } = await auth();
    if (!userId) {
      return NextResponse.json({ error: 'Unauthorized' }, { status: 401 });
    }

    // 2. Parse and validate query parameters
    const searchParams = request.nextUrl.searchParams;
    const params = QuerySchema.parse({
      providerId: searchParams.get('providerId') || undefined,
    });

    // 3. Fetch from materialized view (pre-calculated)
    let sql = 'SELECT * FROM provider_kpi_summary_mv';
    const queryParams: string[] = [];

    if (params.providerId) {
      sql += ' WHERE provider_id = $1';
      queryParams.push(params.providerId);
    }

    sql += ' ORDER BY provider_name';

    const result = await query(sql, queryParams);

    // 4. Return with metadata
    return NextResponse.json({
      data: result.rows,
      metadata: {
        count: result.rowCount,
        generatedAt: new Date().toISOString(),
        dataSource: 'PostgreSQL_MaterializedView',
        calculationsInDatabase: true,
        apiPassthroughOnly: true,
      },
    });
  } catch (error) {
    console.error('KPI API error:', error);
    return NextResponse.json(
      {
        error: 'Internal server error',
        message: error instanceof Error ? error.message : 'Unknown error',
      },
      { status: 500 }
    );
  }
}
